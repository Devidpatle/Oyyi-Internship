---
const {title,description,icon} = Astro.props;
import { Icon } from 'astro-icon'
---
<div class="relative pl-16">
    <dt class="text-base font-semibold leading-7">
        <div class="absolute top-0 left-0 flex p-1 h-10  w-10 items-center justify-center rounded-lg">
           <img src={icon} alt={title}/>
        </div>
        <h3 class="text-[#2A74DC] font-extrabold">{title}</h3>
    </dt>
    <dd class="mt-2 text-base leading-7 text-white">{description}</dd>
</div>


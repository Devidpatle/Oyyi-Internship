---
const {title,description,icon} = Astro.props;
import { Icon } from 'astro-icon'
---
<div class="relative pl-16 text-center ">
    <dt class="text-base font-semibold leading-7">
        <div class=" bg-[#3E7DF5] justify-center items-center flex mb-7 mr-auto ml-auto h-20  w-20 rounded-r-full">
           <img src={icon} alt={title}/>
        </div>
        <h3 class="text-[#080321] leading-10 font-body font-semibold mb-3 m-0 text-2xl">{title}</h3>
    </dt>
    <dd class=" text-lg  font-medium font-body leading-7 text-[#637381]">{description}</dd>
</div>


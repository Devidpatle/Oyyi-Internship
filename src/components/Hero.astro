---
const {title,description, link="", secondBtn=false} = Astro.props;
import SVG1 from "../assets/svg/hero-shape-1.svg";
import SVG2 from "../assets/svg/hero-shape-2.svg";
---


<section class="hero min-h-screen bg-gradient-to-t from-slate-100 to-blue-200 z-10 relative pb-28 pt-48">
    <div class="hero-content">
        <div class=" max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12">
            <div class="mr-auto flex flex-col items-center flex-wrap place-self-center lg:col-span-7">
                <h1 class=" w-3/5 text-[#080321] font-body text-center text-5xl md:text-6xl font-bold  tracking-tighter mb-4 font-heading dark:text-gray-200">{title}</h1>
                <p class="max-w-2xl font-body font-semibold mb-6 text-center leading-7 text-[#637381] lg:mb-8 md:text-lg lg:text-xl ">{description}</p>
                <a href={link} class="text-[#FFFFFF] pt-3 px-8 font-body font-semibold leading-6 text-base bg-gradient-to-r from-cyan-500 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800  rounded-full text-md  py-3.5 text-center mr-2 mb-2">Explore</a>
            </div>
        </div>
    </div> 
    <div class="">
    <img src={SVG1} alt="" class="-z-10 left-0 top-0 absolute max-w-full h-auto block align-middle">
    <img src={SVG2} alt="" class="-z-10 right-0 top-0 absolute max-w-full h-auto block align-middle">
    </div>
    
</section>    

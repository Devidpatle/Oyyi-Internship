---
const {title,description,icon} = Astro.props;
---
<div class="relative pl-16">
    <dt class="text-base font-semibold leading-7 text-gray-900">
        <div class="absolute top-0 left-0 flex h-16 p-3 w-16 items-center justify-center rounded-lg bg-indigo-600">
           <img src={icon} class="max-w-100" alt={title}>
        </div>
        {title}
    </dt>
    <dd class="mt-2 text-base leading-7 text-gray-600">{description}</dd>
</div>

